# ~/.config/zsh/env.common.zsh
# ----------------------------
# Platform‑agnostic environment variables
# (nothing here should assume macOS‑only tooling)

# --- Shell Behaviour & Appearance -----------------------------------
export TERM="xterm-256color"
export LANG="en_US.UTF-8"
export PAGER="less"
export LESS="-R"                     # Make less handle colours correctly
export BAT_THEME="DarkNeon"
export COLORTERM="truecolor"

# --- ripgrep / eza colour schemes -----------------------------------
# (these are generic dir‑colour strings, not mac‑specific)
export LS_COLORS="di=1;36:ln=35:so=32:pi=33:ex=31:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43"
export EZA_THEME="custom_theme"

# --- Conda -----------------------------------------------------------
export CONDA_EXE="$HOME/miniconda3/bin/conda"
export _CE_M=""
export _CE_CONDA=""
export CONDA_PYTHON_EXE="$HOME/miniconda3/bin/python"
export CONDA_SHLVL="1"
export CONDA_PREFIX="$HOME/miniconda3"
export CONDA_DEFAULT_ENV="base"
export CONDA_PROMPT_MODIFIER="(base)"

# --- SSH -------------------------------------------------------------
export SSH_AUTH_SOCK="$SSH_AUTH_SOCK"   # will be set by ssh‑agent on any OS

# --- API Keys & Credentials ---
export CONSUMER_KEY="<YOUR_CONSUMER_KEY>"           # TODO: Fill in your consumer key

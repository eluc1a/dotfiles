export GOOGLE_APPLICATION_CREDENTIALS="<YOUR_GOOGLE_APPLICATION_CREDENTIALS_PATH>" # TODO: Fill in your Google credentials path
export OPENAI_API_KEY="<YOUR_OPENAI_API_KEY>"       # TODO: Fill in your OpenAI API key

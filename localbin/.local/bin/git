#!/usr/bin/env bash
# git wrapper that runs gitleaks before "git add"
# - respects .gitignore
# - uses rules at ~/.config/gitleaks/.gitleaks.toml
# - skips commit history for speed

# stop if we’re already inside the wrapper (avoid recursion)
if [[ -n "$GIT_WRAPPER_SENTINEL" ]]; then
  exec "$GIT_WRAPPER_SENTINEL" "$@"
fi

# drop this wrapper’s dir from PATH and find the real git
WRAPPER_DIR="$(cd "$(dirname "$0")" && pwd -P)"
export PATH="$(printf '%s' "$PATH" | tr ':' '\n' | grep -v -F "$WRAPPER_DIR" | paste -sd ':' -)"
REAL_GIT="$(command -v git)"
export GIT_WRAPPER_SENTINEL="$REAL_GIT"

# only hook into "git add"
if [[ $1 == "add" ]]; then
  shift
  override=0; args=()

  for arg in "$@"; do
    case "$arg" in
      --override) override=1 ;;
      -h|--help)  exec "$REAL_GIT" add -h ;;
      *)          args+=("$arg") ;;
    esac
  done

  if (( override == 0 )); then
    GITLEAKS_CONFIG="${GITLEAKS_CONFIG:-$HOME/.config/gitleaks/.gitleaks.toml}"

    # list files that would be staged (tracked+modified or new), respecting .gitignore
    mapfile -d '' scan_files < <(
      git ls-files -z --cached --others --exclude-standard -- "${args[@]:-.}"
    )
    for file in "${scan_files[@]}"; do
      [[ -z "$file" ]] && continue
      gitleaks detect \
        -c "$GITLEAKS_CONFIG" \
        --no-git \
        -s "$file" \
        --verbose
      status=$?
      if (( status != 0 )); then
        echo "XXX gitleaks flagged secrets in '$file'. XXX"
        echo "fix them or rerun with --override if you really want to stage it"
        exit $status
      fi
    done
  fi

  exec "$REAL_GIT" add "${args[@]}"
else
  exec "$REAL_GIT" "$@"
fi